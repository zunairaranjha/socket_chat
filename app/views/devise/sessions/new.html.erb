              <h3 class="font-size-15">Welcome Back !</h3>
              <p>Sign in to continue</p>
            </div>
            <div class="col align-self-end">
              <%= image_tag 'welcome-back.png', style: 'max-width: 100%' %>
            </div>
          </div>
